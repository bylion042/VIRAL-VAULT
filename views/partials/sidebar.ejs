                        <!-- FUNCTION TO OPEN NOTIFICATION BAR  -->
                        <script>
                            const openNotification = document.getElementById("open-notification");
                            const closeNotification = document.getElementById("close-notification");
                            const notificationPanel = document.getElementById("notificationPanel");

                            openNotification.addEventListener("click", () => {
                                notificationPanel.classList.add("open");
                            });

                            closeNotification.addEventListener("click", () => {
                                notificationPanel.classList.remove("open");
                            });

                            // Optional: click outside to close
                            document.addEventListener("click", (e) => {
                                if (!notificationPanel.contains(e.target) && !openNotification.contains(e.target)) {
                                    notificationPanel.classList.remove("open");
                                }
                            });
                        </script>